<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:state_enabled="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/btn_color2"
                android:endColor="@color/btn_color1"
                android:angle="90"/>
            <stroke
                android:color="#B0B4AB"
                android:width="1dp"/>
            <corners
                android:radius="15dp"/>
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#8D8DC79C"
                android:endColor="@color/btn_color1"
                android:angle="90"/>
            <stroke
                android:color="#B0B4AB"
                android:width="1dp"/>
            <corners
                android:radius="15dp"/>
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid
                android:color="#AECAB6"/>
            <stroke
                android:color="#B0B4AB"
                android:width="1dp"/>
            <corners
                android:radius="15dp"/>
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>
</selector>