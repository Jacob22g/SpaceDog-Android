<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PreGameSelection"
    android:padding="20dp"
    android:background="@color/setting">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_level"
        android:fontFamily="@font/virgo"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:textColor="#FFF"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I"
        android:layout_marginHorizontal="90dp"
        android:fontFamily="@font/virgo"
        android:background="@drawable/btn_color_shape"
        android:id="@+id/level_1_btn"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="II"
        android:layout_marginHorizontal="90dp"
        android:fontFamily="@font/virgo"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_color_shape"
        android:id="@+id/level_2_btn"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="III"
        android:layout_marginHorizontal="90dp"
        android:fontFamily="@font/virgo"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_color_shape"
        android:id="@+id/level_3_btn"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/dog1_iv"
            android:src="@drawable/dog_1"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/dog2_iv"
            android:src="@drawable/dog_2"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/dog3_iv"
            android:scaleX="-1"
            android:src="@drawable/dog_5"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dont_hit_the_dogs"
            android:fontFamily="@font/virgo"
            android:textColor="#FFF"
            android:textSize="30dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/dogs_tv"
            android:layout_marginStart="20dp"/>
    </LinearLayout>

</LinearLayout>